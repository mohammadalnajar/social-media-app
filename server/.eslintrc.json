{
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx"]
            }
        }
    },
    "extends": ["airbnb-base", "prettier", "plugin:node/recommended"],
    "plugins": ["prettier"],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "node/no-unsupported-features/es-syntax": [
            "error",
            {
                "version": ">=8.5.0",
                "ignores": ["modules"]
            }
        ],
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto",
                "tabWidth": 4
            }
        ],
        "import/extensions": ["error", { "js": "always", "json": "always" }],
        "no-unused-vars": "warn",
        "no-console": "off",
        "func-names": "off",
        "no-underscore-dangle": "warn"
    }
}
